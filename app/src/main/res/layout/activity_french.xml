<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrenchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_header"
            layout="@layout/tool_bar_french" />

        <LinearLayout
            android:layout_below="@id/tool_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="50dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="150dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp">
                    <ImageButton
                        android:id="@+id/btn_food_french"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/btnfood"
                        android:src="@drawable/ic_food" />
                    <TextView
                        android:layout_below="@id/btn_food_french"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Food"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/btn_family_french"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/btnfamily"
                        android:src="@drawable/ic_family" />
                    <TextView
                        android:layout_below="@id/btn_family_french"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp">
                    <ImageButton
                        android:id="@+id/btn_greetings_french"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/btngreetings"
                        android:src="@drawable/ic_food" />
                    <TextView
                        android:layout_below="@id/btn_greetings_french"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Greetings"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/btn_utilities_french"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/btnutilities"
                        android:src="@drawable/ic_utilities" />
                    <TextView
                        android:layout_below="@id/btn_utilities_french"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utilities"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <include
        layout="@layout/navigation_dr"/>

</android.support.v4.widget.DrawerLayout>